{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": ["ESNext", "ES2020", "DOM", "DOM.Iterable"],
        "skipLibCheck": true,
        "strictNullChecks": false,
        "importHelpers": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "removeComments": false,
        "isolatedModules": true,
        "noEmit": true,
        "declaration": true,
		"declarationDir": "es",
		"allowJs": true,
        "jsx": "preserve",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": false,
		"noImplicitThis": false,
        "baseUrl": "./",
        "plugins": [{ "name": "typescript-plugin-css-modules", "options": { "customMatcher": "\\.module\\.(c|le|sa|sc)ss$" } }],
        "paths": {
            "@/*": ["example/*"],
            "@miitvip/admin-pro": ["src/index.ts"]
        }
    },
    "files": ["src/typings.d.ts"],
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"],
    "exclude": ["node_modules", "dist", "lib", "es", "build", "example"]
}
